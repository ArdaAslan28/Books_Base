@model books.Models.AdminViewModels.TurlerVM;

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Tür Ekle</h1> 
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin">Ana Sayfa</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Turler">Türler</a></li>
                    <li class="breadcrumb-item active">TürEkle</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="card card-info col-6">
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal" method="post">
        @Html.AntiForgeryToken()
        <div class="card-body">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Tür Adı</label>
                <div class="col-sm-10">
                    <input asp-for="TurAdi" type="text" class="form-control" placeholder="Tür Adı">
                </div>
                <span asp-validation-for="TurAdi" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Sıra</label>
                <div class="col-sm-10">
                    <input asp-for="Sira" type="text" class="form-control" placeholder="Sıra">
                </div>
                <span asp-validation-for="Sira" class="text-danger"></span>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-info float-right">Ekle</button>
            <button type="button" class="btn btn-default" onclick="GeriDon()">Vazgeç</button>
        </div>
        <!-- /.card-footer -->
    </form>
</div>
<!-- /.card -->

</div>

<script>
    function GeriDon()
    {
        location.replace("/Admin/Turler");
    }
</script>