@model List<books.Models.ViewModels.IndexVM>;
@{
    ViewData["Title"] = "Home Page";
}

<div class="row my-4">
    <div class="col-6">
        <div class="row h3 ms-1 my-4">
            Yazar Hakkında
        </div>
        <div class="row fs-6">
            <p>Yazarın Adı ve Soyadı: @ViewBag.yazar.YazarAdi @ViewBag.yazar.YazarSoyadi</p>
        </div>
        <div class="row fs-6">
            <p>Yazarın Cinsiyeti: @ViewBag.yazar.Cinsiyet</p>
        </div>
        <div class="row fs-6">
            <p>Yazarın Doğum Tarihi: @ViewBag.yazar.yazarDogumTarihi</p>
        </div>
        <div class="row fs-6">
            <p>Yazarın Doğum Yeri: @ViewBag.yazar.yazarDogumYeri</p>
        </div>
        <div class="row fs-6">
            <p>Yazarın yazdığı kitaplar: @ViewBag.yazar.kitapSayisi</p>
        </div>
    </div>
    <div class="col-6">
        <img src="~/images/yazar.jpg" class="img-fluid" alt="@ViewBag.yazarAdi">
    </div>
</div>

<div class="row">
    @foreach (var kitap in Model)
    {
        <div class="col-lg-3">
            <!-- Blog post-->
            <div class="card mb-4">
                <a href="/Kitap/@kitap.Id"><img class="card-img-top" src="/images/book/@kitap.Resim" alt="..." /></a>
                <div class="card-body">
                    <div class="small text-muted">@kitap.YayinTarihi</div>
                    <a class="card-title fs-5" href="/Kitap/@kitap.Id">@kitap.KitapAdi</a>
                    <br>

                    @*<a class="btn btn-primary" href="/Kitap/@kitap.Id">İncele →</a>*@
                </div>
            </div>


        </div>

    }
</div>

<!-- Pagination-->
<nav aria-label="Pagination">
    <hr class="my-0" />
    <ul class="pagination justify-content-center my-4">
        <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1" aria-disabled="true">Newer</a></li>
        <li class="page-item active" aria-current="page"><a class="page-link" href="#!">1</a></li>
        <li class="page-item"><a class="page-link" href="#!">2</a></li>
        <li class="page-item"><a class="page-link" href="#!">3</a></li>
        <li class="page-item disabled"><a class="page-link" href="#!">...</a></li>
        <li class="page-item"><a class="page-link" href="#!">15</a></li>
        <li class="page-item"><a class="page-link" href="#!">Older</a></li>
    </ul>
</nav>