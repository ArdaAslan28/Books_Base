<!-- Nested row for non-featured blog posts-->
<H1>Son Eklenenler</H1>
<br>
<br>

<div class="row">
    @foreach (var kitap in Model)
    {
        <div class="col-lg-3">
            <!-- Blog post-->
            <div class="card mb-4">
                <a href="/Kitap/@kitap.Id"><img class="card-img-top" src="/images/book/@kitap.Resim"
                        alt="..." /></a>
                <div class="card-body">
                    <div class="small text-muted">@kitap.YayinTarihi</div>
                    <a class="card-title fs-5" href="/Kitap/@kitap.Id">@kitap.KitapAdi</a>
                    <br>

                    @*<a class="btn btn-primary" href="/Kitap/@kitap.Id">İncele →</a>*@
                </div>
            </div>
    

        </div>

    }    
