@model books.Models.AdminViewModels.UserVM;

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewBag.Pagetitle</h1> 
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin">Ana Sayfa</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Users">User</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Pagetitle</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="card card-info col-6">
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal" method="post">
        @Html.AntiForgeryToken()
        <div class="card-body">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Username</label>
                <div class="col-sm-10">
                    <input asp-for="username" type="text" class="form-control" placeholder="Username">
                </div>
                <span asp-validation-for="username" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input asp-for="password" type="text" class="form-control" placeholder="Password">
                </div>
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-info float-right">Ekle</button>
            <button type="button" class="btn btn-default" onclick="GeriDon()">Vazge√ß</button> 
        </div>
        <!-- /.card-footer -->
    </form>
</div>
<!-- /.card -->

</div>

<script>
    function GeriDon()
    {
        location.replace("/Admin/User");
    }
</script>